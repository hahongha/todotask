<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="20dp"
    app:cardElevation="20dp"
    android:layout_margin="8dp"
    android:longClickable="true">

    <LinearLayout
        android:layout_width="300dp"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="16dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <com.google.android.material.button.MaterialButton
                android:id="@+id/material_btn_tag"
                style="@style/TransparentButton"
                android:layout_width="127dp"
                android:layout_height="wrap_content"
                android:layout_gravity="left"
                android:scaleType="centerCrop">

            </com.google.android.material.button.MaterialButton>
            <TextView
                android:id="@+id/lst_tv_dateTask"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:layout_weight="1"
                android:hint="Date task"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:textSize="16sp"
                android:textStyle="bold" />


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/lst_tv_nameTask"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:layout_weight="1"
                android:hint="Name task"
                android:textSize="16sp"
                android:textStyle="bold" />
            <TextView
                android:id="@+id/lst_tv_timeStart"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:layout_weight="1"
                android:hint="Time Start"
                android:textColor="#888888"
                android:textSize="14sp" />
            <TextView
                android:id="@+id/lst_tv_timeEnd"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:layout_weight="1"
                android:hint="Time End"
                android:textColor="#888888"
                android:textSize="14sp" />

        </LinearLayout>



    </LinearLayout>

</androidx.cardview.widget.CardView>