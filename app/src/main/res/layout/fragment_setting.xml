<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:focusableInTouchMode="true"
    tools:context=".SettingFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:paddingLeft="20dp"
        android:paddingRight="20dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:src="@drawable/ic_set_1"

                />

            <TextView
                android:id="@+id/textViewNewTask"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_marginTop="40dp"
                android:text=" Setting"
                android:textSize="24sp" />
        </LinearLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/languageInputLayout"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.ExposedDropdownMenu"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp">

            <AutoCompleteTextView
                android:id="@+id/set_language"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:drawableLeft="@drawable/ic_set_language"
                android:visibility="visible"
                android:inputType="none"
                android:text=" Languages">

            </AutoCompleteTextView>
        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/sendInputLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/set_sendfeedback"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:clickable="false"

                android:cursorVisible="false"
                android:drawableLeft="@drawable/ic_set_sendfeedback"
                android:focusable="false"
                android:focusableInTouchMode="false"
                android:hint=" Send feedback">

            </com.google.android.material.textfield.TextInputEditText>
        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/calendarInputLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp">


            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/set_calendar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:clickable="false"

                android:cursorVisible="false"
                android:drawableLeft="@drawable/ic_set_calendar"
                android:focusable="false"
                android:focusableInTouchMode="false"
                android:hint=" Calendar sync" />
        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/backupInputLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/set_backup"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:clickable="false"

                android:cursorVisible="false"
                android:drawableLeft="@drawable/ic_set_backup"
                android:focusable="false"
                android:focusableInTouchMode="false"
                android:hint=" Backup" />



        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/aboutInputLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/set_about"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:clickable="false"

                android:cursorVisible="false"
                android:drawableLeft="@drawable/ic_set_about"
                android:focusable="false"
                android:focusableInTouchMode="false"
                android:hint=" About TimeTune" />
        </com.google.android.material.textfield.TextInputLayout>
        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/changeTheme"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp">


            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/themechange"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:clickable="false"

                android:cursorVisible="false"
                android:focusable="false"
                android:focusableInTouchMode="false"
                android:textSize="18dp"
                android:hint="Change theme" />

            <androidx.appcompat.widget.SwitchCompat
                android:id="@+id/ChangeTheme"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="-60dp"
                android:layout_marginEnd="0dp"
                android:layout_marginStart="260dp"
                android:thumb="@drawable/thumb"
                app:track="@drawable/track" />

        </com.google.android.material.textfield.TextInputLayout>



        <LinearLayout
            android:id="@+id/socialicons"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="50dp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/google"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_weight="1"
                android:src="@drawable/ic_set_gg" />

            <ImageView
                android:id="@+id/facebook"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_weight="1"
                android:src="@drawable/ic_set_fb" />

            <ImageView
                android:id="@+id/twitter"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_weight="1"
                android:src="@drawable/ic_set_tw" />

        </LinearLayout>

    </LinearLayout>

</RelativeLayout>